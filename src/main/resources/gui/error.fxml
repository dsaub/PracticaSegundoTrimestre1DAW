            fx:controller="me.elordenador.practica6.gui.controllers.ErrorController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <ImageView fitHeight="128.0" fitWidth="128.0">
                    <image>
                        <Image url="@../img/warning.svg"/>
                    </image>
                </ImageView>
                <Label fx:id="errorLabel" text="Ha ocurrido un error" style="-fx-font-size: 18px; -fx-text-fill: red;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>